    "posters:build": "node promo/tools/render-posters.js",
    "preview:motion": "npx serve . -l 5050"
  },
  "dependencies": {
    "firebase-admin": "^12.5.0",
    "sharp": "^0.33.3",
    "stripe": "^17.3.0"
  },
  "devDependencies": {
