{
  "name": "whylee",
  "version": "7008.0.2",
  "description": "Whylee â€” interactive daily brain-training PWA (Free + Pro versions, cinematic promo tools)",
  "type": "module",
  "scripts": {
    "start": "npx serve .",
    "thumbs": "node tools/make-thumbs.mjs",
    "brand": "node tools/make-brand-assets.mjs",
    "generate": "netlify functions:invoke generateDailyQuestions",
    "build": "npm run thumbs && npm run brand",
    "motion": "node tools/make-motion-from-posters.mjs",
