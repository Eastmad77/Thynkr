    "netlify-cli": "^17.34.1",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "pwa",
    "quiz",
    "game",
    "netlify",
    "firebase",
    "stripe",
    "brain-training",
    "education",
    "ai",
    "autonomous",
    "cinematic",
    "motion",
    "promo"
  ],
  "author": "Whylee Team",
  "license": "MIT",
  "netlify": {
    "functions": "netlify/functions"
  },
  "config": {
    "ffmpeg": "required",
    "media": {
      "posters": "media/posters/v1",
      "motion": "media/motion",
      "thumbnails": "media/thumbnails"
    }
  }
