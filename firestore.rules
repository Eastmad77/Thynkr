rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Entitlement flags (server writes)
    match /entitlements/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if false; // Cloud Functions only
    }

    // Receipt records (server only)
    match /receipts/{token} { allow read, write: if false; }

    // tokenâ†’uid links (created via HTTPS endpoint; optional to allow user write)
    match /purchaseLinks/{token} {
      allow read: if false;
      allow write: if request.auth != null;
    }
  }
}
