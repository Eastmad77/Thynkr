rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // No public uploads by default
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }

    // If you store user avatars here (optional pattern):
    match /user_uploads/{uid}/{fileId} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
